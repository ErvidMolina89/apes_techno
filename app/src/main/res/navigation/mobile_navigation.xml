    app:startDestination="@+id/navigation_home_movies">

    <fragment
        android:id="@+id/navigation_home_movies"
        android:name="com.example.apes_techno.Presentations.Fragments.FragmentHomeMovies.Implementations.FragmentHomeMovies"
